<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000044"
    tools:context=".LoginSignIn">

    <LinearLayout
        android:id="@+id/login_signin_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_signin_edit_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="Email"/>

        <EditText
            android:id="@+id/login_signin_edit_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="Senha"/>

        <Button
            android:id="@+id/login_signin_enter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Entrar"/>

        <Button
            android:id="@+id/login_signin_enter_facebook"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Conectar com o Facbook"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_signin_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="Esqueci a senha"/>

            <TextView
                android:id="@+id/login_signin_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Cadastre-se"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
