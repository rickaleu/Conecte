<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000044"
    tools:context=".LoginRegister">

    <LinearLayout
        android:id="@+id/login_register_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_register_edit_first_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="Nome"/>

        <EditText
            android:id="@+id/login_register_edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="Sobrenome"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_register_button_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Data de nascimento"/>

            <TextView
                android:id="@+id/login_register_label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="00/00/0000"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/login_register_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Masculino" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Feminino" />

        </RadioGroup>

        <EditText
            android:id="@+id/login_register_cpf"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="CPF"/>

        <EditText
            android:id="@+id/login_register_edit_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="Email"/>

        <EditText
            android:id="@+id/login_register_edit_emailconfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@android:color/white"
            android:hint="Confirme seu email"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_register_edit_check_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="Estou ciente da política de privacidade da Samsung"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_register_enter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cadastrar"/>

        <TextView
            android:id="@+id/login_register_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="Já possui uma conta? Entrar"/>

    </LinearLayout>



</RelativeLayout>
